scwin.btn_ex1_onclick = function (e) {
    var jsnOptions;

    jsnOptions = {
        fileName: "SP5_EXAMPLE_P00105_TYPE1.xlsx"
    };

    grd_exam1.advancedExcelDownload(jsnOptions);
};

/**

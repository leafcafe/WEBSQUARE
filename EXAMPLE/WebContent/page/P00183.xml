						<w2:column dataType="text" id="updated_date"
							name="업데이트 날짜"></w2:column>
						<w2:column dataType="text" id="version" name="버전"></w2:column>
						<w2:column dataType="text" id="description" name="설명"></w2:column>
						<w2:column dataType="text" id="author" name="작성인"></w2:column>
					</w2:columnInfo>
					<w2:data use="true">
						<w2:row>
							<updated_date><![CDATA[20230106]]></updated_date>
							<version><![CDATA[01]]></version>
							<description><![CDATA[최초작성]]></description>
							<author><![CDATA[InswaveSystems]]></author>
						</w2:row>
					</w2:data>
				</w2:dataList>
				<w2:dataList baseNode="list" id="dlt_books_1" repeatNode="map"
					style="" valueAttribute="">
					<w2:columnInfo>
						<w2:column dataType="text" id="label" name="도서명"></w2:column>
						<w2:column dataType="text" id="categoryLabel" name="분류"></w2:column>
					</w2:columnInfo>
				</w2:dataList>
			</w2:dataCollection>
			<w2:workflowCollection />
		</xf:model>
		<w2:layoutInfo />
		<w2:publicInfo method="" />
		<script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function () {
    //DataList에 데이터 할당
    scwin.setDataList();

    //DataList에 행 추가, 행 삭제, cell 값 변경
    scwin.setDataStatus();
};

/**
 * DataList에 데이터 할당
 */
scwin.setDataList = function () {
    var arrData = [
        { "label": "나로서 충분히 괜찮은 사람", "categoryLabel": "시/에세이" },
        { "label": "공정하다는 착각", "categoryLabel": "인문" },
        { "label": "내가 틀릴 수도 있습니다", "categoryLabel": "인문" }
    ];

    dlt_books_1.setJSON(arrData);
};

/**
 * DataList에 행 추가, 행 삭제, cell 값 변경
 */
scwin.setDataStatus = function () {
    //행 추가
    dlt_books_1.insertRow(1);
    //셀 수정
    dlt_books_1.setCellData(2, "label", "도서명 변경 중");
    //행 삭제
    dlt_books_1.deleteRow(3);
};]]></script>
	</head>
	<body ev:onpageload="scwin.onpageload">
		<xf:group class="sub_contents" id="" style="">
			<xf:group class="ws_example_grp_desc" id="" style="">
				<w2:textbox escape="false" id=""
					label='GridView의 행 상태 컬럼의 부가 기능 설정 예시입니다.&lt;br/&gt;예제에 설정한 기능은 속성 rowStatusVisible(행 상태 표시 설정)이 true로 지정되어야 동작합니다.'
					style="">
				</w2:textbox>
				<w2:textbox escape="false" id=""
					label="아래 목록은 적용 속성별 설명입니다.&lt;br/&gt;- rowStatusVisible : 행의 상태(추가/수정/삭제) 컬럼을 표시&lt;br/&gt;- rowNumStatusResize : 행 상태 컬럼의 리사이즈 가능 여부 지정&lt;br/&gt;- rowStatusHeaderValue : 행 상태 컬럼의 헤더의 출력 값(레이블) 지정&lt;br/&gt;- rowStatusWidth : 행 상태 컬럼 너비(폭) 지정"
					style="">
				</w2:textbox>
			</xf:group>
			<xf:group class="example_div_tb_style_wrap" id="">
				<xf:group class="example_div_tr_style" id="" style="">
					<w2:textbox class="example_div_th_style" escape="false"
						id="" label="행 상태 표시 및 부가 설정" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<w2:textbox class="ws5_example_txt_normal"
							escape="false" id=""
							label="부가 설정 목록&lt;br/&gt;- 행 상태 컬럼 너비(폭)이 '34px'로 지정되었습니다.&lt;br/&gt;- 행 상태 컬럼의 헤더에 문자열 '상태'가 표시(출력)됩니다.&lt;br/&gt;- 행 상태 컬럼의 리사이즈가 가능합니다. (헤더 컬럼에서 조작)"
							style="">
						</w2:textbox>
						<w2:gridView autoFit="lastColumn" autoFitMinWidth="240"
							class="wq_gvw" dataList="data:dlt_books_1"
							defaultCellHeight="24"
							id="" style="height:100px;" visibleRowNum="4"
							visibleRowNumFix="true" rowNumStatusResize="true"
							rowStatusHeaderValue="상태"
							rowStatusVisible="true" rowStatusWidth="34">
							<w2:caption id="caption1" style=""
								value="this is a grid caption."></w2:caption>
							<w2:header id="header1" style="">
								<w2:row id="row1" style="">
									<w2:column displayMode="label" id="column2"
										inputType="text" value="분류" width="90"></w2:column>
									<w2:column displayMode="label" id="column3"
										inputType="text" value="도서명" width="160"></w2:column>
								</w2:row>
							</w2:header>
							<w2:gBody id="gBody1" style="">
								<w2:row id="row2" style="">
									<w2:column displayMode="label"
										id="categoryLabel" inputType="text"
										width="90" value=""></w2:column>
									<w2:column displayMode="label" id="label"
										inputType="text" textAlign="left"
										width="160" value=""></w2:column>
								</w2:row>
							</w2:gBody>
						</w2:gridView>
					</xf:group>
				</xf:group>
				<xf:group class="example_div_tr_style" id="" style="">
					<w2:textbox class="example_div_th_style" escape="false"
						id="" label="행 상태 표시만 설정" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<w2:textbox class="ws5_example_txt_normal"
							escape="false" id=""
							label="GridView의 속성 rowStatusVisible=true" style=""></w2:textbox>
						<w2:gridView autoFit="lastColumn" autoFitMinWidth="240"
							class="wq_gvw" dataList="data:dlt_books_1"
							defaultCellHeight="24"
							id="" style="height:100px;" visibleRowNum="4"
							visibleRowNumFix="true" rowNumStatusResize="false"
							rowStatusVisible="true">
							<w2:caption id="caption1" style=""
								value="this is a grid caption."></w2:caption>
							<w2:header id="header1" style="">
								<w2:row id="row1" style="">
									<w2:column displayMode="label" id="column2"
										inputType="text" value="분류" width="90"></w2:column>
									<w2:column displayMode="label" id="column3"
										inputType="text" value="도서명" width="160"></w2:column>
								</w2:row>
							</w2:header>
							<w2:gBody id="gBody1" style="">
								<w2:row id="row2" style="">
									<w2:column displayMode="label"
										id="categoryLabel" inputType="text"
										value="" width="90"></w2:column>
									<w2:column displayMode="label" id="label"
										inputType="text" textAlign="left"
										value="" width="160"></w2:column>
								</w2:row>
							</w2:gBody>
						</w2:gridView>
					</xf:group>
				</xf:group>
			</xf:group>
		</xf:group>
	</body>
</html>

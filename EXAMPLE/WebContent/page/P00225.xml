<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ev="http://www.w3.org/2001/xml-events"
	xmlns:w2="http://www.inswave.com/websquare"
	xmlns:xf="http://www.w3.org/2002/xforms">
	<head>
		<w2:type>COMPONENT</w2:type>
		<w2:buildDate />
		<w2:MSA />
		<xf:model>
			<w2:dataCollection baseNode="map">
				<w2:dataList baseNode="list" id="dlt_page_history"
					repeatNode="map" saveRemovedData="true" style="">
					<w2:columnInfo>
						<w2:column dataType="text" id="updated_date"
							name="업데이트 날짜"></w2:column>
						<w2:column dataType="text" id="version" name="버전"></w2:column>
						<w2:column dataType="text" id="description" name="설명"></w2:column>
						<w2:column dataType="text" id="author" name="작성인"></w2:column>
					</w2:columnInfo>
					<w2:data use="true">
						<w2:row>
							<updated_date><![CDATA[20230217]]></updated_date>
							<version><![CDATA[01]]></version>
							<description><![CDATA[최초작성]]></description>
							<author><![CDATA[InswaveSystems]]></author>
						</w2:row>
					</w2:data>
				</w2:dataList>
				<w2:dataList baseNode="list" id="dlt_books_1" repeatNode="map"
					style="" valueAttribute="">
					<w2:columnInfo>
						<w2:column dataType="text" id="book_name" name="도서명"></w2:column>
						<w2:column dataType="text" id="price" name="정가"></w2:column>
						<w2:column id="published_date" name="출간일"
							dataType="text"></w2:column>
					</w2:columnInfo>
				</w2:dataList>
			</w2:dataCollection>
			<w2:workflowCollection />
		</xf:model>
		<w2:layoutInfo />
		<w2:publicInfo method="" />
		<script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function () {
    scwin.setInitData();
};

scwin.setInitData = function () {
    var arrData = [
        { "book_name": "사람일까 상황일까", "price": "28000", "published_date": "20190826" },
        { "book_name": "내가 틀릴 수도 있습니다", "price": "16000", "published_date": "20220418" },
        { "book_name": "인간 실격", "price": "9000", "published_date": "20040515" },
        { "book_name": "공정하다는 착각", "price": "18000", "published_date": "20201201" }
    ];

    dlt_books_1.setJSON(arrData);
};

/**
 * textarea의 로그 삭제
 */
scwin.btn_clearLog_onclick = function (e) {
    txa_log.setValue("");
};

/**
 * GridView grd_exam1의 ondateselect 이벤트 핸들러
 */
scwin.grd_exam1_ondateselect = function (row, col, dateStr, dateObj) {
    //row : 수정되고 있는 셀의 행 번호
    //col : 수정되고 있는 셀의 열 번호
    //dateStr : 선택한 날짜의 문자열
    //dateObj : 선택한 날짜의 Date 객체 -> 개발자 도구 console에서 확인합니다.

    let strLog = "";

    strLog += "** scwin.grd_exam1_ondateselect ** \n";
    strLog += "row index : " + row + "\n";
    strLog += "column index : " + col + "\n";
    strLog += "selected date : " + dateStr;

    //textarea에 log 출력
    $c.frame.printExampleLog(strLog, txa_log, false);

    //console에 log 출력
    console.log(strLog);
    console.log(row, col, dateStr, dateObj);
};
]]></script>
	</head>
	<body ev:onpageload="scwin.onpageload">
		<xf:group class="sub_contents" id="" style="">
			<xf:group class="ws_example_grp_desc" id="" style="">
				<w2:textbox escape="false" id=""
					label="GridView의 이벤트 onDateSelect 예제입니다.&lt;br/&gt;이 이벤트는 컬럼의 inputType이 'calendar'로 지정되고, 사용자가 셀의 편집 모드에서 달력 UI의 '일'(day)를 선택했을 때 발생합니다.&lt;br/&gt;이벤트 핸들러를 지정하면 핸들러에서 아래의 값을 확인할 수 있습니다.&lt;br/&gt;- 수정되고 있는 셀의 행 번호&lt;br/&gt;- 수정되고 있는 셀의 열 번호&lt;br/&gt;- 선택한 날짜의 문자열&lt;br/&gt;- 선택한 날짜의 Date 객체"
					style="">
				</w2:textbox>
				<w2:textbox class="txt_info_important" id=""
					label="컴포넌트의 이벤트 발생 시 영역 [로그 확인]의 textarea 또는 브라우저 개발자도구 콘솔에 로그가 출력됩니다."
					style=""></w2:textbox>
			</xf:group>
			<xf:group class="example_div_tb_style_wrap" id="">
				<xf:group class="example_div_tr_style" id="" style="">
					<w2:textbox class="example_div_th_style" escape="false"
						id="" label="이벤트 ondateselect 발생 시 로그 출력하기" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<w2:textbox class="ws5_example_txt_normal"
							escape="false" id=""
							label="컬럼 '출간일'의 셀을 더블 클릭하면 편집 모드로 전환되고 아이콘 달력이 표시됩니다.&lt;br/&gt;아이콘을 클릭하고 달력 UI에서 '일'(day)를 선택하면 로그가 출력됩니다."
							style="">
						</w2:textbox>
						<w2:gridView autoFitMinWidth="274" class="wq_gvw"
							dataList="data:dlt_books_1" defaultCellHeight="24"
							id="grd_exam1"
							style="height:100px;" visibleRowNum="4"
							rowNumVisible="false" rowNumWidth="26"
							visibleRowNumFix="true" autoFit="lastColumn"
							ev:ondateselect="scwin.grd_exam1_ondateselect">
							<w2:caption id="caption1" style=""
								value="this is a grid caption."></w2:caption>
							<w2:header id="header1" style="">
								<w2:row id="row1" style="">
									<w2:column hidden="false" width="90"
										inputType="text" id="h_col3" value="출간일"
										displayMode="label">
									</w2:column>
									<w2:column hidden="false" width="54"
										inputType="text" id="h_col2" value="정가"
										displayMode="label">
									</w2:column>
									<w2:column displayMode="label" id="h_col1"
										inputType="text" value="도서명" width="130"></w2:column>
								</w2:row>
							</w2:header>
							<w2:gBody id="gBody1" style="">
								<w2:row id="row2" style="">
									<w2:column dataType="date"
										displayFormat="yyyy-MM-dd"
										displayMode="label" id="published_date"
										inputType="calendar"
										width="90">
									</w2:column>
									<w2:column dataType="number"
										displayFormat="#,###"
										displayMode="label" id="price"
										inputType="text" textAlign="right"
										width="54" value="">
									</w2:column>
									<w2:column displayMode="label"
										id="book_name" inputType="text"
										textAlign="left" width="130" value=""></w2:column>
								</w2:row>
							</w2:gBody>
						</w2:gridView>
					</xf:group>
				</xf:group>
			</xf:group>
			<xf:group class="example_div_tb_style_wrap" id="" style="">
				<xf:group class="example_div_tr_style" id="" style="">
					<xf:group class="example_div_th_style" id="">
						<w2:span class="mr_def txt_blue" id="" label="로그 확인"
							style=""></w2:span>
						<xf:trigger class="com_example_btn_log_clear"
							ev:onclick="scwin.btn_clearLog_onclick"
							id="btn_clearLog" style=""
							title="로그 삭제" type="button">
							<xf:label><![CDATA[검색 취소]]></xf:label>
						</xf:trigger>
					</xf:group>
					<xf:group class="example_div_td_style" id="" style="">
						<xf:textarea class="com_example_txa_log" id="txa_log"
							spellcheck="false"
							style="width: 100%;height: 140px;"></xf:textarea>
					</xf:group>
				</xf:group>
			</xf:group>
		</xf:group>
	</body>
</html>
